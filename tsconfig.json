{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6"
		],
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"rootDir": "src",
		"strict": true, /* enable all strict type-checking options */
		/* Additional Checks */
		"noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
	},
	"include": [
		"src"
	]
}